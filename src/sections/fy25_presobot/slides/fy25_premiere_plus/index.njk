{% block js_ready %}
	var isClient = $('body').hasClass('client');
	var $pageContainer = $('article#fy25_premiere_plus');

	var $imgNavigationContainer = $pageContainer.find('.content__subslide-modal__img--navigation');
	var $prev = $imgNavigationContainer.find('.prev');
	var $next = $imgNavigationContainer.find('.next');

	var $imgSlideNavBtn14 = $pageContainer.find('#checkbox-14');

	function toggleNavigationButton(subslideKey) {
		$pageContainer.find(`#${subslideKey} .prev`).toggleClass('inactive');
		$pageContainer.find(`#${subslideKey} .next`).toggleClass('inactive');
	}; 

	function bindMasterEvent() {
		// Change image subslide-9:
		$prev.on('click', function() {
			if (!$(this).hasClass('inactive')) {
				toggleNavigationButton('subslide-9');
				$('#subslide-9 .subslide__img').toggleClass('subslide__img-9-2');
				Bridge.Event.trigger('master:change-img-subslide-9', {nextImg: false});
			};
		});

		// Change image subslide-9:
		$next.on('click', function() {
			if (!$(this).hasClass('inactive')) {
				toggleNavigationButton('subslide-9');
				$('#subslide-9 .subslide__img').toggleClass('subslide__img-9-2');
				Bridge.Event.trigger('master:change-img-subslide-9', {nextImg: true});
			};
		});
	
		// Change image subslide-14:
		$imgSlideNavBtn14.on('change', function(e) {
			$('#subslide-14 .subslide__img').toggleClass('subslide__img-14-2');
			Bridge.Event.trigger('master:change-img-subslide-15', {nextImg: e.target.checked});
		});
	};

	function bindClientEvent() {
		Bridge.Event.on('master:change-img-subslide-9', ({nextImg}) => {
			if (nextImg) {
				$('#subslide-9 .subslide__img').addClass('subslide__img-9-2');
			} else {
				$('#subslide-9 .subslide__img').removeClass('subslide__img-9-2');
			}
		});

		Bridge.Event.on('master:change-img-subslide-15', ({nextImg}) => {
			$imgSlideNavBtn14.prop('checked', nextImg);
			if (nextImg) {
				$('#subslide-14 .subslide__img').addClass('subslide__img-14-2');
			} else {
				$('#subslide-14 .subslide__img').removeClass('subslide__img-14-2');
			}
		});
	};


	if (isClient) {
		bindClientEvent();
	} else {
		bindMasterEvent();
	};

{% endblock %}