{% macro renderSubslide(data) %}
	<div id="subslide-{{data.subslideNum}}" class="page0{{data.subslideNum}} subslide content content__subslide-modal content__subslide-modal--new content__subslide-modal--{{data.key}}">
		<div class="close-subslide" data-companywide-editable="editable-fy25_premiere_plus-6dMadpbJPu"></div>
		<div class="subslide-modal__content">
			<div>
				<div class="subslide-modal__content--category {{data.key}}" data-companywide-editable="editable-fy25_premiere_plus-BQ01w55uQ3">
					{{data.category}}
					{% if data.subLogo %}
						<div class="sub-logo"></div>
					{% endif%}
				</div>
				<div class="subslide-modal__content--title" data-companywide-editable="editable-fy25_premiere_plus-rc9zL2YX7H">
					{% if data.label%}
						<span class="tag">{{data.label}}</span>
					{% endif%}
					{{data.title | safe}}
				</div>
				<p data-companywide-editable="editable-fy25_premiere_plus-4SbJiDmTM3">
					{{data.description | safe}}
				</p>

			</div>
			<div class="subslide__img subslide__img-{{data.subslideNum}}"></div>
		</div>
		<section class="disclaimer" data-companywide-editable="editable-fy25_premiere_plus-mnqqwerft5">
			<div class="disclaimer-container">
				<div class="disclaimer-body">
					<ol>
						{% for disclaimer in data.disclaimers%}
							<li class="disclaimer-copy">{{disclaimer}}</li>
						{% endfor%}
					</ol>
				</div>
			</div>
		</section>

		{% if data.subslideNum === 9 %}
			<div class="content__subslide-modal__img--navigation">
				<div class="prev inactive"></div>
				<div class="next"></div>
			</div>
		{% endif %}
		{% if data.subslideNum === 14 %}
			<div class="content__subslide-modal__img--switch">
				<input id="checkbox-14" type="checkbox"/>
				<label for="checkbox-14">
					<div class="slider"></div>
				</label>
			</div>
		{% endif %}
	</div>
{% endmacro %}

