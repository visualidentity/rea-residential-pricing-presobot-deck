{% macro title(copy='Section', subtitle='', classes='', cweKey=null, randomKeyTitle="title", randomKeySubTitle="subtitle") %}
<div class="section-content {% if subtitle %}section-content--has-subtitle{% endif %} {{ classes }} o-transition__children--fade-up">
	<h1 class="section-content__title" {% if cweKey %}data-companywide-editable="{{cweKey}}_{{randomKeyTitle}}"{% endif %}>{{ copy | safe}}</h1>
	{% if subtitle %}
	<h4 class="section-content__subtitle o-transition__delay--200" {% if cweKey %}data-companywide-editable="{{cweKey}}_{{randomKeySubTitle}}"{% endif %}>{{ subtitle | safe}}</h4>
	{% endif %}
</div>
{% endmacro %}
