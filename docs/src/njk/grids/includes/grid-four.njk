{# slide options #}
{% set options = {
	id: "grids",
	article_classes: ""
} %}

{# header options #}
{% set optionsHeader = {
	title: "Four Column Grid",
	titleClasses: "",
	subtitle: "Showing the four column grid",
	subtitleClasses: ""
} %}

{% extends "src/njk/base.njk" %}

{# import header partial and add to header_block #}
{% import "src/njk/_partials/header.njk" as header %}
{% block header_block %}
	{{ header.title(options, optionsHeader) }}
{% endblock %}

{# import grid macro #}
{% import "src/njk/_partials/grid.njk" as grid %}

{% block content %}

	{% set grid_4 = {
			bg_colour: "",
			size: "4",
			collapsed: false,
			classes: "column-group--height-full",
			columns: [
				{
					bg_colour: "pebble",
					classes: "",
					size: "2"
				},
				{
					bg_colour: "pebble",
					classes: "",
					size: "1"
				},
				{
					bg_colour: "pebble",
					classes: "",
					size: "1"
				}
			]
		}
	%}

	{{ grid.column_group(grid_4) }}

{% endblock %}
